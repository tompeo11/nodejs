<main class="flex-grow-1 d-flex flex-column container">
    <% if(products.length > 0){ %>
        <div class="container">
            <div class="row">
                <% products.forEach((product, index) => {%>
                    <div class="col-xl-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="card shadow" style="width: 95%;">
                            <div class="card-header" style="font-weight: bolder"> <%= product.title%> </div>
                            <div class="card-body">
                                <img src="/images/<%= product.image %>" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title"><%= product.price %></h5>
                                    <p class="card-text" style="max-height: 48px; max-width: 98%; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden"><%= product.description %></p>
                                    <a href="#" class="btn btn-primary">Add to cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% }else{ %>
        <h1 style="text-align: center">No product found</h1>
    <% }%>
</main>